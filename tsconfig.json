{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "paths": {
            "#db/*": ["./node_modules/@wxn0brp/db/dist/*"],
            "#db": ["./node_modules/@wxn0brp/db/dist/index"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSourceMap": false,
        "sourceMap": true,
        "declaration": true,
    },
    "include": [
       "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
